<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tugasin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/judul</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="activedropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/cornertask</item>
        <item name="cornerRadius">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/judul</item>
        <item name="hintTextColor">@color/judul</item>
        <item name="endIconTint">@color/cornertask</item>
    </style>

    <style name="activedropdownkategori" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/cornertask</item>
        <item name="cornerRadius">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/judul</item>
        <item name="hintTextColor">@color/judul</item>
        <item name="endIconTint">@color/judul</item>
    </style>

    <style name="completestyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:dropDownListViewStyle">@style/activedropdown</item>
    </style>

    <style name="dropdownmenubackground">
        <item name="android:background">@color/cornertask</item>
    </style>


    <style name="activedropdowninHome" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/cornertask</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">-0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/judul</item>
        <item name="hintTextColor">@color/judul</item>
        <item name="endIconTint">@color/cornertask</item>
    </style>

</resources>
